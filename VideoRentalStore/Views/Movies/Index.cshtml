@model IEnumerable<VideoRentalStore.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in @Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                        movie.Name,
                        "Details",
                        "Movies",
                        new {id = movie.Id},
                        null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
</div>